
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/potholelessroad"
    tools:context="com.seniordesign.alissa.potholesensor.MainActivity"
    android:id="@+id/MainMenuRelLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pothole Sensor Application"
        android:id="@+id/textView"
        android:background="@color/wallet_highlighted_text_holo_dark"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pothole Markers"
        android:id="@+id/button1"
        android:layout_above="@+id/button2"
        android:background="@drawable/prettybluebutton"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:layout_marginBottom="61dp"
        android:onClick="goToPotholeMarkers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pothole Warnings"
        android:id="@+id/button2"
        android:background="@drawable/prettybluebutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="goToPotholeWarnings" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test GPS"
        android:id="@+id/button3"
        android:background="@drawable/prettybluebutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="goToTestGPS" />
</RelativeLayout>
